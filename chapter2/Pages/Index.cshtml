@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <div class="w-fit bg-white relative pb-20  dark:bg-gray-900">
        <div class="relative xl:container m-auto px-6 md:px-12 lg:px-6">
            <h1 class="sm:mx-auto sm:w-10/12 md:w-2/3 font-black text-blue-900 text-4xl text-center sm:text-5xl md:text-6xl lg:w-auto lg:text-left xl:text-7xl dark:text-white">Ordering your favorite pizza is  <br class="lg:block hidden"> <span class="relative text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-500 dark:from-blue-400 dark:to-cyan-300"> now easier</span>.</h1>
            <div class="lg:flex">
                <div class="relative mt-8 md:mt-16 space-y-8 sm:w-10/12 md:w-2/3 lg:ml-0 sm:mx-auto text-center lg:text-left lg:mr-auto lg:w-7/12">
                    <p class="sm:text-lg text-gray-700 dark:text-gray-300 lg:w-11/12">
                        Ordering your favorite pizza is now easier 
                    </p>
                    <span class="block font-semibold text-gray-500 dark:text-gray-400">The best companion for your pizza.</span>


                    <div class="dark:text-gray-300">
                        🔥🌟
                        <span>Follow me :</span>
                        <a href="#" class="font-semibold text-gray-700 dark:text-gray-200">Discord,</a>
                        <a href="#" class="font-semibold text-gray-700 dark:text-gray-200">Telegram</a>
                    </div>

                    <div class="pt-12 flex gap-6 lg:gap-12 justify-between grayscale lg:w-2/3">
                        <img src="https://www.freepnglogos.com/uploads/pizza-hut-png-logo/does-the-new-logo-flavors-pizza-hut-png-13.png" class="h-8 sm:h-10 w-auto lg:h-12" alt="" />
                        <img src="https://logos-world.net/wp-content/uploads/2021/08/Dominos-Pizza-Logo-1996-2012.png" class="h-8 sm:h-10 w-auto lg:h-12" alt="" />
                        <img src="https://static.wikia.nocookie.net/logopedia/images/0/0c/Little_Caesars_1971.svg" class="h-8 sm:h-10 w-auto lg:h-12" alt="" />
                    </div>
                </div>
                <div class="mt-12 md:mt-0 lg:absolute -right-8 lg:w-7/12">
                    <div class="relative w-full">
                        <div aria-hidden="true" class="absolute scale-75 md:scale-110 inset-0 m-auto w-full h-full md:w-96 md:h-96 rounded-full rotate-45 bg-gradient-to-r from-sky-500 to-cyan-300 blur-3xl"></div>
                        <img src="~/images/pizza_hero.png" class="relative w-full" alt="wath illustration" loading="lazy" width="320" height="280">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
