@page
@model chapter2.Pages.Froms.CustomPizzaModel
@{
}

<body class="bg-gray-50 ">
	<!-- Container -->
	<div class="container mx-auto">
		<div class="flex justify-center px-6 my-12">
			<!-- Row -->
			<div class="w-full xl:w-3/4 lg:w-11/12 flex">
				<!-- Col -->
				<div class="w-full h-auto bg-gray-400 hidden lg:block lg:w-1/2 bg-cover rounded-l-lg"
					 style="background-image: url('https://i.imgur.com/TGo3ysE.jpeg')"></div>
				<!-- Col -->
				<div class="w-full lg:w-1/2 bg-white p-5 rounded-lg lg:rounded-l-none shadow-lg hover:shadow-md">
					<div class="px-8 mb-4 text-center">
						<h3 class="pt-4 mb-2 text-2xl">Create Your Own Pizza</h3>
						<p class="mb-4 text-sm text-gray-700">
							Choose what you feel that fit you from our list of options:
						</p>
					</div>
					<form class="px-8 pt-6 pb-8 mb-4 bg-white rounded" method="post" autocomplete="off">
						<div class="relative mb-6">
							<div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
								<img src="https://i.imgur.com/F0kgy8k.png" width="30" />
							</div>
							<input asp-for="Pizza.PizzaName" type="text" id="PizzaName" class="bg-gray-50 border border-blue-300 text-blue-900 text-sm font-bold rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Pizza Name">
						</div>

						<div class="relative mb-6">
							<div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
								<img src="~/images/eating.png" width="15" />
							</div>
							<input asp-for="CustomerName" type="text" id="CustomerName" class="bg-gray-50 border border-blue-300 text-blue-900 text-sm font-bold rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Your Name">
						</div>
						<div class="relative mb-6">
							<div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
								<img src="~/images/phone-call.png" width="15" />
							</div>
							<input asp-for="CustomerPhone" type="number" value="" id="CustomerPhone" class="bg-gray-50 border border-blue-300 text-blue-900 text-sm font-bold rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Your Phone">
						</div>

						<div class="flex items-start items-center mb-4">
							<input id="TomatoSouce" asp-for="Pizza.TomatoSouce" aria-describedby="TomatoSouce" type="checkbox" class="bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-4 w-4 rounded">
							<label for="TomatoSouce" class="text-sm ml-3 font-medium text-gray-900">Tomato Souce</label>
						</div>
		
						<div class="flex items-start items-center mb-4">
							<input id="Cheese" asp-for="Pizza.Cheese" aria-describedby="Cheese" type="checkbox" class="bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-4 w-4 rounded">
							<label for="Cheese" class="text-sm ml-3 font-medium text-gray-900">Cheese</label>
						</div>

						<div class="flex items-start items-center mb-4">
							<input id="Peperoni" asp-for="Pizza.Peperoni" aria-describedby="Peperoni" type="checkbox" class="bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-4 w-4 rounded">
							<label for="Peperoni" class="text-sm ml-3 font-medium text-gray-900">Peperoni</label>
						</div>

						<div class="flex items-start items-center mb-4">
							<input id="Mushroom" asp-for="Pizza.Mushroom" aria-describedby="Mushroom" type="checkbox" class="bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-4 w-4 rounded">
							<label for="Mushroom" class="text-sm ml-3 font-medium text-gray-900">Mushroom</label>
						</div>

						<div class="flex items-start items-center mb-4">
							<input id="Tuna" asp-for="Pizza.Tuna" aria-describedby="Tuna" type="checkbox" class="bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-4 w-4 rounded">
							<label for="Tuna" class="text-sm ml-3 font-medium text-gray-900">Tuna</label>
						</div>

						<div class="flex items-start items-center mb-4">
							<input id="Pineapple" asp-for="Pizza.Pineapple" aria-describedby="Pineapple" type="checkbox" class="bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-4 w-4 rounded">
							<label for="Pineapple" class="text-sm ml-3 font-medium text-gray-900">Pineapple</label>
						</div>

						<div class="flex items-start items-center mb-4">
							<input id="Ham" aria-describedby="Ham" asp-for="Pizza.Ham" type="checkbox" class="bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-4 w-4 rounded">
							<label for="Ham" class="text-sm ml-3 font-medium text-gray-900">Ham</label>
						</div>

						<div class="flex items-start items-center mb-4">
							<input id="Beef" asp-for="Pizza.Beef" aria-describedby="Beef" type="checkbox" class="bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-4 w-4 rounded">
							<label for="Beef" class="text-sm ml-3 font-medium text-gray-900">Beef</label>
						</div>

						<div class="mb-6 text-center">
							<button class="w-full px-4 py-2 font-bold text-white bg-green-500 rounded-full hover:bg-green-700 focus:outline-none focus:shadow-outline"
									type="submit">
								Order Now
							</button>
						</div>
						<hr class="mb-6 border-t" />
						<div class="text-center">
							<a class="inline-block text-sm text-blue-500 align-baseline hover:text-blue-800"
							   href="./register.html">
								Order one of our Collection
							</a>
						</div>
						<div class="text-center">
							<a class="inline-block text-sm text-blue-500 align-baseline hover:text-blue-800"
							   href="./index.html">
								Suggistion? Contact Us!
							</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</body>

<a href="Checkout/Checkout" class="p-4 border border-gray-200 dark:bg-gray-800  dark:border-gray-700 rounded-full duration-300 hover:border-blue-400 hover:shadow-lg hover:shadow-blue-600/20 dark:hover:border-blue-300/30">Checkout 🏪</a>
